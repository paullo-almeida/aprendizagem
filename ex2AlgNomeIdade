#include <stdio.h>
#include <string.h>
int main ()
#define MAX 100
{
 char nome[MAX];
 int idade;

 printf("Digite seu nome: \n");
  scanf("%s", nome);
  printf ("Seu nome é %s! \n", nome);

 

 printf("Digite sua idade: \n");
 scanf("%i", &idade);
 printf("Sua idade é %i anos! \n", idade);
 
  return 0;
}
